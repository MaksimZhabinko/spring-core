<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean id="paginator" class="com.epam.spring.util.Paginator"
          p:warnMessage="Invalid data passed for pagination: page size = {}, page number = {}"/>
    <bean id="idGenerator" class="com.epam.spring.util.IdGenerator"/>
    <bean id="gson" class="com.google.gson.Gson"/>

    <bean id="dataBeanPostProcessor" class="com.epam.spring.postprocessor.DataBeanPostProcessor" autowire="no"
          p:startInfoMessage="Found a field annotated with statically data binding. Started binding..."
          p:finishInfoMessage="Successfully finished binding">
        <property name="idGenerator" ref="idGenerator"/>
        <property name="gson" ref="gson"/>
    </bean>

    <bean id="eventDao" class="com.epam.spring.dao.impl.EventDaoImpl" autowire="no">
        <property name="paginator" ref="paginator"/>
        <property name="idGenerator" ref="idGenerator"/>
    </bean>
    <bean id="userDao" class="com.epam.spring.dao.impl.UserDaoImpl" autowire="no">
        <property name="paginator" ref="paginator"/>
        <property name="idGenerator" ref="idGenerator"/>
    </bean>
    <bean id="ticketDao" class="com.epam.spring.dao.impl.TicketDaoImpl" autowire="no">
        <property name="paginator" ref="paginator"/>
        <property name="idGenerator" ref="idGenerator"/>
    </bean>

    <bean id="userService" class="com.epam.spring.service.impl.UserServiceImpl" autowire="constructor"/>
    <bean id="eventService" class="com.epam.spring.service.impl.EventServiceImpl" autowire="constructor"/>
    <bean id="ticketService" class="com.epam.spring.service.impl.TicketServiceImpl" autowire="constructor"/>

    <bean id="bookingFacade" class="com.epam.spring.facade.impl.BookingFacadeImpl" autowire="no">
        <constructor-arg ref="eventService"/>
        <constructor-arg ref="ticketService"/>
        <constructor-arg ref="userService"/>
    </bean>

    <context:annotation-config />
</beans>